<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dimen_108_dip">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_599_dip"
        android:background="@drawable/frg5_mine_bg"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dimen_20_dip"
            android:text="我的"
            android:textColor="@color/white_me"
            android:textSize="20sp"
            android:textStyle="bold" />

        <com.zgp.view.CircleImageView
            android:id="@+id/frg5_headpic"
            android:layout_width="@dimen/dimen_200_dip"
            android:layout_height="@dimen/dimen_200_dip"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dimen_100_dip"
            android:background="@drawable/upload_thumb_me"
            app:border_color="@color/yellow"
            app:border_width="@dimen/dimen_3_dip" />

        <TextView
            android:id="@+id/frg5_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dimen_20_dip"
            android:text="未登录"
            android:textColor="@color/white_me"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>