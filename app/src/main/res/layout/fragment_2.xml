<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dimen_108_dip">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_86_dip"
        android:background="@color/bg_color"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dimen_20_dip"
            android:text="分类"
            android:textColor="@color/white_me"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_10_dip"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/fenlei_01"
            android:layout_width="@dimen/dimen_330_dip"
            android:layout_height="@dimen/dimen_330_dip"
            android:layout_marginLeft="@dimen/dimen_10_dip"
            android:src="@drawable/fenlei_01" />


        <ImageButton
            android:id="@+id/fenlei_02"
            android:layout_width="@dimen/dimen_330_dip"
            android:layout_height="@dimen/dimen_330_dip"
            android:layout_marginLeft="@dimen/dimen_20_dip"
            android:src="@drawable/fenlei_02" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_10_dip"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/fenlei_03"
            android:layout_width="@dimen/dimen_330_dip"
            android:layout_height="@dimen/dimen_330_dip"
            android:layout_marginLeft="@dimen/dimen_10_dip"
            android:src="@drawable/fenlei_03" />


        <ImageButton
            android:id="@+id/fenlei_04"
            android:layout_width="@dimen/dimen_330_dip"
            android:layout_height="@dimen/dimen_330_dip"
            android:layout_marginLeft="@dimen/dimen_20_dip"
            android:src="@drawable/fenlei_04" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_10_dip"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/fenlei_05"
            android:layout_width="@dimen/dimen_330_dip"
            android:layout_height="@dimen/dimen_330_dip"
            android:layout_marginLeft="@dimen/dimen_10_dip"
            android:src="@drawable/fenlei_05" />


        <ImageButton
            android:id="@+id/fenlei_06"
            android:layout_width="@dimen/dimen_330_dip"
            android:layout_height="@dimen/dimen_330_dip"
            android:layout_marginLeft="@dimen/dimen_20_dip"
            android:src="@drawable/fenlei_06" />
    </LinearLayout>
</LinearLayout>