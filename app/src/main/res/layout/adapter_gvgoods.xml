<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/item_ll_left"
        android:layout_width="@dimen/dimen_330_dip"
        android:layout_height="@dimen/dimen_400_dip"
        android:layout_marginLeft="@dimen/dimen_20_dip"
        android:layout_marginTop="@dimen/dimen_10_dip"
        android:background="@drawable/item_goods_bg"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/left_goods_img"
            android:layout_width="@dimen/dimen_330_dip"
            android:layout_height="@dimen/dimen_250_dip"
            android:layout_gravity="center"
            android:src="@drawable/ic_launcher" />

        <LinearLayout
            android:layout_width="@dimen/dimen_300_dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/dimen_5_dip"
            android:layout_marginTop="@dimen/dimen_15_dip"
            android:orientation="vertical">

            <TextView
                android:id="@+id/left_goods_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="进口新鲜荔枝"
                android:textColor="@color/color_goods_item_title"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="———————————————————————"
                android:textColor="@color/color_goods_item_line"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/left_goods_title_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="JINKOU XINXIANLIZHI"
                android:textColor="@color/color_goods_item_deepgray"
                android:textSize="10sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10_dip"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/goods_praise" />

                    <TextView
                        android:id="@+id/left_goods_praise"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dimen_10_dip"
                        android:text="888人"
                        android:textColor="@color/color_goods_item_gray"
                        android:textSize="10sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/goods_update_time" />

                    <TextView
                        android:id="@+id/left_goods_update_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dimen_10_dip"
                        android:text="2015-12-08"
                        android:textColor="@color/color_goods_item_gray"
                        android:textSize="10sp" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_ll_right"
        android:layout_width="@dimen/dimen_330_dip"
        android:layout_height="@dimen/dimen_400_dip"
        android:layout_marginLeft="@dimen/dimen_20_dip"
        android:layout_marginTop="@dimen/dimen_10_dip"
        android:background="@drawable/item_goods_bg"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/right_goods_img"
            android:layout_width="@dimen/dimen_330_dip"
            android:layout_height="@dimen/dimen_250_dip"
            android:layout_gravity="center"
            android:src="@drawable/ic_launcher" />

        <LinearLayout
            android:layout_width="@dimen/dimen_300_dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/dimen_5_dip"
            android:layout_marginTop="@dimen/dimen_15_dip"
            android:orientation="vertical">

            <TextView
                android:id="@+id/right_goods_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="进口新鲜荔枝"
                android:textColor="@color/color_goods_item_title"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="———————————————————————"
                android:textColor="@color/color_goods_item_line"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/right_goods_title_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="JINKOU XINXIANLIZHI"
                android:textColor="@color/color_goods_item_deepgray"
                android:textSize="10sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10_dip"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/goods_praise" />

                    <TextView
                        android:id="@+id/right_goods_praise"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dimen_10_dip"
                        android:text="888人"
                        android:textColor="@color/color_goods_item_gray"
                        android:textSize="10sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/goods_update_time" />

                    <TextView
                        android:id="@+id/right_goods_update_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dimen_10_dip"
                        android:text="2015-12-08"
                        android:textColor="@color/color_goods_item_gray"
                        android:textSize="10sp" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>