                android:text="周边" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tab_rl_5"
            style="@style/bottom_navi_item" >

            <ImageView
                android:id="@+id/tab_iv_5"
                style="@style/bottom_navi_item_img"
                android:layout_centerHorizontal="true"
                android:contentDescription="@null"
                android:src="@drawable/selector_frg_tab_5" />

            <TextView
                style="@style/bottom_navi_item_text"
                android:layout_below="@id/tab_iv_5"
                android:layout_centerHorizontal="true"
                android:text="我的" />
        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>