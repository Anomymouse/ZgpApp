<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_108_dip"
        android:layout_alignParentBottom="true"
        android:baselineAligned="false"
        android:gravity="bottom"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/tab_rl_1"
            style="@style/bottom_navi_item" >

            <ImageView
                android:id="@+id/tab_iv_1"
                style="@style/bottom_navi_item_img"
                android:layout_centerHorizontal="true"
                android:contentDescription="@null"
                android:src="@drawable/selector_frg_tab_1" />

            <TextView
                style="@style/bottom_navi_item_text"
                android:layout_below="@id/tab_iv_1"
                android:layout_centerHorizontal="true"
                android:text="首页" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tab_rl_2"
            style="@style/bottom_navi_item" >

            <ImageView
                android:id="@+id/tab_iv_2"
                style="@style/bottom_navi_item_img"
                android:layout_centerHorizontal="true"
                android:contentDescription="@null"
                android:src="@drawable/selector_frg_tab_2" />

            <TextView
                style="@style/bottom_navi_item_text"
                android:layout_below="@id/tab_iv_2"
                android:layout_centerHorizontal="true"
                android:text="分类" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tab_rl_3"
            style="@style/bottom_navi_item" >

            <ImageView
                android:id="@+id/tab_iv_3"
                style="@style/bottom_navi_item_img"
                android:layout_centerHorizontal="true"
                android:contentDescription="@null"
                android:src="@drawable/selector_frg_tab_3" />

            <TextView
                style="@style/bottom_navi_item_text"
                android:layout_below="@id/tab_iv_3"
                android:layout_centerHorizontal="true"
                android:text="购物车" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tab_rl_4"
            style="@style/bottom_navi_item" >

            <ImageView
                android:id="@+id/tab_iv_4"
                style="@style/bottom_navi_item_img"
                android:layout_centerHorizontal="true"
                android:contentDescription="@null"
                android:src="@drawable/selector_frg_tab_4" />

            <TextView
                style="@style/bottom_navi_item_text"
                android:layout_below="@id/tab_iv_4"
