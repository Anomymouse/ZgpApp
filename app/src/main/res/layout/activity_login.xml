<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_150_dip"
        android:src="@drawable/logo" />

    <EditText
        android:id="@+id/et_username"
        style="@style/editetext_style"
        android:layout_width="250dp"
        android:layout_height="40.0dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dimen_106_dip"
        android:drawableLeft="@drawable/icon_login_username"
        android:gravity="center_vertical"
        android:hint="账号"
        android:inputType="phone"
        android:maxLength="11"
        android:paddingLeft="10.0dip"
        android:singleLine="true"
        android:textColor="@color/white_me"
        android:textColorHint="@color/gray_me_white"
        android:textCursorDrawable="@drawable/color_cursor" />

    <EditText
        android:id="@+id/et_password"
        style="@style/editetext_style"
        android:layout_width="250dp"
        android:layout_height="40.0dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_toLeftOf="@+id/bt_get_code"
        android:drawableLeft="@drawable/icon_login_password"
        android:gravity="center_vertical"
        android:hint="密码"
        android:inputType="phone"
        android:maxLength="11"
        android:paddingLeft="10.0dip"
        android:singleLine="true"
        android:textColor="@color/white_me"
        android:textColorHint="@color/gray_me_white"
        android:textCursorDrawable="@drawable/color_cursor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_20_dip"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:layout_marginLeft="@dimen/dimen_130_dip"
                android:id="@+id/iv_autologin"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_login_choose" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="记住密码"
                android:textColor="@color/gray_me_white" />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/textView"
                android:layout_marginLeft="@dimen/dimen_110_dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="忘记密码？"
                android:textColor="@color/gray_me_white" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_marginTop="@dimen/dimen_120_dip"
        android:layout_width="230dp"
        android:layout_height="35dp"
        android:id="@+id/imageView2"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_headbar_bg"
        android:text="L O G I N"
        android:textSize="20sp"
        android:textStyle="bold"/>
</LinearLayout>